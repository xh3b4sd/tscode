{
  "compilerOptions": {
    "module": "es6",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "noLib": false,
    "declaration": true,
    "declarationDir": "./dst",
    "outDir": "./dst",
    "incremental": false,
    "newLine": "lf",
    "lib": ["dom", "es2018", "scripthost"],
    "esModuleInterop": true,
    "rootDir": "pkg",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "declarationMap": true
  },
  "exclude": ["node_modules", "pkg/*_test.ts", "dst"],
  "include": ["pkg/**/*"]
}
